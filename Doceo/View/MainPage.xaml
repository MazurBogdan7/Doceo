<Page x:Class="Doceo.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Doceo.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="#7fc7ff">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="30">
            <TextBlock Text="Приветствуем в обучающей программе Doceo"  FontSize="30" TextAlignment="Center"> </TextBlock>
            <TextBlock  FontSize="20" Margin="10" TextAlignment="Center">
                Эта программма поможет вам в
                <LineBreak />обучении языкам програмирования такими как C++
                <LineBreak />Вы можете просмотреть курсы и свой профиль
                <LineBreak />наведя курсор мышии на вверх</TextBlock>
            <TextBlock></TextBlock>
        </StackPanel>
        
    </Grid>
</Page>
