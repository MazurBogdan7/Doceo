<Window x:Class="Doceo.View.MainDoceoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doceo.View"
        mc:Ignorable="d"
        Title="MainDoceoWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="nominate" TargetType="{x:Type StackPanel}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Opacity" Value="1" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TextBlInStack" TargetType="TextBlock" >
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="10" ></Setter>
        </Style>
        <Style x:Key="ButtonInStack" TargetType="Button" >
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="10" ></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Width="150" Style="{StaticResource nominate}" >
            <TextBlock Text="Курсы" Style="{StaticResource TextBlInStack}"></TextBlock>
            <Button Content="C++" Style="{StaticResource ButtonInStack}"></Button>
        
        </StackPanel>
        
    </Grid>
    
</Window>
